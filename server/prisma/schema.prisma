generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CAMPAIGN_MANAGER
  OPERATOR
  VIEWER
}

enum AccountType {
  BRAND_SPECIFIC
  CROSSBRAND
}

enum CampaignStatus {
  PLANNED
  ACTIVE
  COMPLETED
  PAUSED
}

enum KPICategory {
  VIEWS
  QTY_POST
  FYP_COUNT
  VIDEO_COUNT
  GMV_IDR
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Account {
  id           String     @id @default(cuid())
  name         String
  tiktokHandle String?
  accountType  AccountType
  brand        String?
  notes        String?
  campaigns    Campaign[]
  posts        Post[]
  kpis         KPI[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Campaign {
  id          String       @id @default(cuid())
  name        String
  categories  String[]
  startDate   DateTime
  endDate     DateTime
  status      CampaignStatus
  description String?
  accounts    Account[]
  kpis        KPI[]
  posts       Post[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model KPI {
  id         String      @id @default(cuid())
  campaignId String
  accountId  String?
  campaign   Campaign    @relation(fields: [campaignId], references: [id])
  account    Account?    @relation(fields: [accountId], references: [id])
  category   KPICategory
  target     Int
  actual     Int         @default(0)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model PIC {
  id           String        @id @default(cuid())
  name         String
  contact      String?
  notes        String?
  active       Boolean       @default(true)
  roles        PICOnRoles[]
  talentPosts  Post[]        @relation("PicTalent")
  editorPosts  Post[]        @relation("PicEditor")
  postingPosts Post[]        @relation("PicPosting")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model PICRoleType {
  id    String       @id @default(cuid())
  name  String       @unique
  roles PICOnRoles[]
}

model PICOnRoles {
  picId      String
  roleTypeId String
  pic        PIC          @relation(fields: [picId], references: [id])
  roleType   PICRoleType  @relation(fields: [roleTypeId], references: [id])

  @@id([picId, roleTypeId])
}

model Post {
  id             String    @id @default(cuid())
  campaignId     String
  accountId      String
  postDate       DateTime
  postDay        String
  picTalentId    String?
  picEditorId    String?
  picPostingId   String?
  contentCategory String
  adsOnMusic     Boolean
  yellowCart     Boolean
  postTitle      String
  contentType    String
  status         String
  contentLink    String?
  totalView      Int       @default(0)
  totalLike      Int       @default(0)
  totalComment   Int       @default(0)
  totalShare     Int       @default(0)
  totalSaved     Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  campaign   Campaign @relation(fields: [campaignId], references: [id])
  account    Account  @relation(fields: [accountId], references: [id])

  picTalent  PIC?     @relation("PicTalent", fields: [picTalentId], references: [id])
  picEditor  PIC?     @relation("PicEditor", fields: [picEditorId], references: [id])
  picPosting PIC?     @relation("PicPosting", fields: [picPostingId], references: [id])

  @@index([campaignId])
  @@index([accountId])
}
